=begin
def mod_flig_download(links, link_numbers)
  browser = open_browser("google.com")
  i = 0

  while link_numbers.length > 0
    link = links[0]
    links.shift
    link_numbers.shift
    begin                                                            #TODO: implement https library instead
      browser.goto(link)
      sleep(1)
      download_link = browser.input id: 'dl'
      download_link.exist?
      download_link.click
      sleep(1)
    rescue
      puts "Error: Timeout with #{link_numbers[i]}: #{link}"
      puts "Skip or Retry?"
      input = gets
      if input.downcase equal?"skip"
        link = links[0]
        link_numbers.shift
      end
      retry
    end
  end
  sleep(1)
  browser.close
end
=end
